<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:checkMark="?android:attr/listChoiceIndicatorMultiple">


    <RelativeLayout
        android:id="@+id/smsContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/smsUser"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:background="#32a5e7"
            android:src="@drawable/sms"
            android:contentDescription="image"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <TextView
            android:id="@+id/smsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/smsUser"
            android:text="18740414439"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/smsSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smsName"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/smsUser"
            android:text="This is the last Message"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/smsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dip"
            android:text="15:00"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>